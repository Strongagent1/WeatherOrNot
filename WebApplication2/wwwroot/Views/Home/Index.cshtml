@page
@model Index;
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="site.css">
        <h1 style="font-size:110px; outline-color:yellow; text-shadow: 2px 2px 0px #FFFF00;">Weather Or Not</h1>
        <link rel="icon" href="/icons8-summer-color-96.ico" type="image/x-icon">
    </head>
    <body>
        <div class="container">
            <div class="current-info">

                <div class="date-container">
                    <div class="time" id="time">
                        12:30 <span id="am-pm">PM</span>
                    </div>
                    <div class="date" id="date">
                        Monday, Nov  28
                    </div>
                    <div class="place-container">
                        <div class="time-zone" id="time-zone">Canal Wincheser, Ohio</div>
                        <div id="country" class="country">US</div>
                    </div>
                    <div class="others" id="current-weather-items">
                        <div class="weather-item">
                            <div>Temperature ${temp}#176; F</div>
                        </div>
                        <div class="weather-item">
                            <div>Humidity ${humidity}%</div>
                        </div>

                        <div class="weather-item">
                            <div>Wind Speed ${wind_speed}</div>
                        </div>
                        <div class="weather-item">
                            <div>Sunrise ${window.moment(sunrise * 1000).format('HH:mm a')}</div>
                        </div>
                        <div class="weather-item">
                            <div>Sunset ${window.moment(sunset * 1000).format('HH:mm a')}</div>
                        </div>


                    </div>                         <!-- </div> -->


                    <div class="future-forecast">
                        <div class="today" id="current-temp">
                            <img src="http://openweathermap.org/img/wn/10d@4x.png" alt="weather icon" class="w-icon">
                            <div class="other">
                                <div class="day">Monday</div>
                                <div class="temp">High - ${day.temp.max}&#176; F</div>
                                <div class="temp">Low - 25.6&#176; F</div>
                            </div>



                        </div>
                        <div class="weather-forecast" id="weather-forecast">
                            <div class="weather-forecast-item">
                                <div class="day">Tues</div>
                                <img src="http://openweathermap.org/img/wn/10d@2x.png" alt="weather icon" class="w-icon">
                                <div class="temp">High - 35.6&#176; F</div>
                                <div class="temp">Low - 25.6&#176; F</div>
                            </div>
                            <div class="weather-forecast-item">
                                <div class="day">Wed</div>
                                <img src="http://openweathermap.org/img/wn/02d@2x.png" alt="weather icon" class="w-icon">
                                <div class="temp">High - 35.6&#176; F</div>
                                <div class="temp">Low - 25.6&#176; F</div>
                            </div>
                            <div class="weather-forecast-item">
                                <div class="day">Thurs</div>
                                <img src="http://openweathermap.org/img/wn/02d@2x.png" alt="weather icon" class="w-icon">
                                <div class="temp">High - 35.6&#176; F</div>
                                <div class="temp">Low - 25.6&#176; F</div>
                            </div>
                            <div class="weather-forecast-item">
                                <div class="day">Fri</div>
                                <img src="http://openweathermap.org/img/wn/02d@2x.png" alt="weather icon" class="w-icon">
                                <div class="temp">High - 35.6&#176; F</div>
                                <div class="temp">Low - 25.6&#176; F</div>
                            </div>
                            <div class="weather-forecast-item">
                                <div class="day">Sat</div>
                                <img src="http://openweathermap.org/img/wn/02d@2x.png" alt="weather icon" class="w-icon">
                                <div class="temp">High - 35.6&#176; F</div>
                                <div class="temp">Low - 25.6&#176; F</div>
                            </div>
                            <div class="weather-forecast-item">
                                <div class="day">Sun</div>
                                <img src="http://openweathermap.org/img/wn/02d@2x.png" alt="weather icon" class="w-icon">
                                <div class="temp">High - 35.6&#176; F</div>
                                <div class="temp">Low - 25.6&#176; F</div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- <script src="http://openweathermap.org/img/wn/10d@2x.pngscript.js"></script> -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="script.js"></script>
    </body>
    </html>
}




